    {
      "name": "üîß Webhook Testing",
      "item": [
        {
          "name": "Test Webhook Endpoint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "test_signature"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"id\": \"evt_test_webhook\",\n    \"type\": \"checkout.session.completed\",\n    \"data\": {\n        \"object\": {\n            \"id\": \"cs_test_123\",\n            \"subscription\": \"sub_test_123\",\n            \"metadata\": {\n                \"user_id\": \"{{user_id}}\",\n                \"plan_id\": \"{{monthly_plan_id}}\"\n            }\n        }\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/webhook/",
              "host": ["{{base_url}}"],
              "path": ["payment", "webhook", ""]
            },
            "description": "Test webhook endpoint (will fail signature verification but tests endpoint structure)"
          }
        }
      ]
    }
