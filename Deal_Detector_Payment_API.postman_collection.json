              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Monthly Premium Plan\",\n    \"interval\": \"month\",\n    \"amount\": 29.99,\n    \"trial_days\": 7\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/plans/",
              "host": ["{{base_url}}"],
              "path": ["payment", "plans", ""]
            },
            "description": "Create a monthly subscription plan"
          }
        },
