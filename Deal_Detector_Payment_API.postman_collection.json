              "raw": "{\n    \"plan_id\": {{annual_plan_id}},\n    \"success_url\": \"http://localhost:3000/success\",\n    \"cancel_url\": \"http://localhost:3000/cancel\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/create-subscription/",
              "host": ["{{base_url}}"],
              "path": ["payment", "create-subscription", ""]
            },
            "description": "Create a subscription for annual plan"
          }
        },
